#include<iostream>
using namespace std;
int factorial(int num){
    //base case
    if(num == 0){
        return 1;
    }
    //recursive case
    return num * factorial(num-1);
}
int main(){
    cout<<"enter a number: \n";
    int num;
    cin>>num;
    cout<<"factorial of the number is: "<<factorial(num);
    return 0;
}
