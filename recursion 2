#include<iostream>
using namespace std;
int power(int num){
    //base case
    if(num == 1){
        return 2;
    }
    //recursive case
    return  2 * power(num-1);
}
int main(){
    cout<<"enter a number: \n";
    int num;
    cin>>num;
    cout<<"2^num of the number is: "<<power(num);
    return 0;
}
